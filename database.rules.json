{
  "rules": {
    ".read": false,
    ".write": false,
    "messages": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "adminRequests": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null"
    }
  }
}
